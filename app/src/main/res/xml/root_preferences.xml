<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pref_title_notifications">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/key_today_reminder"
            app:summary="@string/summary_daily_reminder"
            app:title="@string/daily_reminder" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/key_release_reminder"
            app:summary="@string/summary_release_reminder"
            app:title="@string/release_reminder" />
    </PreferenceCategory>
</PreferenceScreen>
